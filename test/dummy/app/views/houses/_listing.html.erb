<% if @houses.present? %>
<table>
  <tr>
    <th>Name</th>
    <th>Number</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @houses.each do |house| %>
  <tr>
    <td><%= house.name %></td>
    <td><%= house.number %></td>
    <td><%= link_to 'Show', house %></td>
    <td><%= link_to 'Edit', edit_house_path(house) %></td>
    <td><%= link_to 'Destroy', house, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>
<% else %>
<p>No Houses</p>
<% end %>
